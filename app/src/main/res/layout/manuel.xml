<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/mor"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/anaSayfaDon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/green_circle_button"
            android:contentDescription="@string/ana_menu_exp"
            android:src="@drawable/baseline_home_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yenile1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/basic"
            android:text="@string/refresh"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/krem">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/act_1_baslik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/main_btns1"
                    android:textAlignment="center"
                    android:textColor="#673AB7"
                    android:textSize="32sp"
                    />

                <LinearLayout
                    android:id="@+id/donemKismi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/act_1_text1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:breakStrategy="simple"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/currentAgno"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/agno1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:autofillHints=""
                        android:digits="0123456789.,"
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/pointHint"
                        android:inputType="numberDecimal"
                        android:maxLength="4"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/koyuGri"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/act_1_text2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:breakStrategy="simple"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/totalCred2"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/kredis1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:autofillHints=""
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/hint999"
                        android:inputType="number"
                        android:maxLength="3"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/koyuGri"
                        android:textSize="16sp" />
                </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/gec1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:backgroundTint="@color/mor"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/butPassAdding"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/oncekiBilgi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/green_back"
                    android:fontFamily="monospace"
                    android:padding="5dp"
                    android:text="asd "
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold|italic" />

                <LinearLayout
                    android:id="@+id/dersEkleKismi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dersKismi1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/ders_girisi"
                        android:textAlignment="textStart"
                        android:textColor="#673AB7"
                        android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/dersAdi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/manuel_5"
                        android:inputType="text"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/koyuGri"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1" />

                    <EditText
                        android:id="@+id/dersKredi1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autofillHints=""
                        android:fontFamily="@font/roboto_medium"
                        android:hint="@string/lecCred"
                        android:inputType="number"
                        android:textColor="@android:color/black"
                        android:textColorHint="@color/koyuGri"
                        android:textSize="16sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dersKismi2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/lecPastLetter"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/eskiHarf"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_spinner"
                        android:fontFamily="@font/roboto"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_medium"
                        android:text="@string/lecNewLetter"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/yeniHarf"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_spinner"
                        android:fontFamily="@font/roboto"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/addDers1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:backgroundTint="@color/mor"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/butAddLec"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                </LinearLayout>

                <TextView
                    android:id="@+id/tabloIsim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="@string/manuel_2"
                    android:textAllCaps="false"
                    android:textColor="@color/mor"
                    android:textSize="24sp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gri"
                    app:cardCornerRadius="32dp"
                    android:layout_marginTop="8dp">

                    <com.unisaver.unisaver.RecyclerViewWithMaxHeight
                        android:id="@+id/tablo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:maxHeight="275dp" />

                </androidx.cardview.widget.CardView>

                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="share"
                    android:src="@android:drawable/ic_menu_share"
                    android:background="@drawable/green_back"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/hesaplananAgno1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="56dp"
                    android:fontFamily="monospace"
                    android:text="@string/agnoShow"
                    android:textColor="@color/mor"
                    android:textSize="20sp"
                    />

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

        <com.google.android.gms.ads.AdView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="@string/admob_manuel_combination_banner"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>